{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@now/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["api/**"]
      }
    }
  ],
  "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/api", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "$1" }
  ]
}
